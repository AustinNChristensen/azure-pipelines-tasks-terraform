{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./lib",
    "strict": true,    
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node", 
      "mocha", 
      "q", 
      "reflect-metadata"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "exclude": [
    "node_modules"
  ]
}